.abouts
    --bg: #1D3262
    --color: #fff

    &
        position: relative
        margin-top: -(gap / 2)
        background: var(--bg)
        color: var(--color)
        font-weight: regular
        font-size: 14px
        line-height: 24px

        shadowBorder()

    &__title
        margin-bottom: 16px
        text-transform: uppercase
        font-weight: bold
        font-size: 20px
        line-height: 32px

    &__more
        display: flex
        justify-content: center
        align-items: center
        margin-top: 32px
        width: 146px
        height: 42px
        border-radius: var(--border-radius)
        background: var(--primary)
        color: var(--primary-contrast)

        &:hover
            background: var(--primary-hover)
            color: var(--primary-hover-contrast)

    &__container
        container()

        display: flex
        align-items: center

        @media media-min-lg
            height: 403px

    &__figure
        position: absolute
        right: 0
        height: 100%

        @media media-max-lg
            display: none

        img
            width: 100%
            height: 100%
            object-fit: cover
            object-position: center

    &__content
        position: relative
        z-index: 2
        padding: 20px 0

        @media media-min-lg
            max-width: 520px