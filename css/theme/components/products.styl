.products
    margin: gap 0

    @media media-min-lg
        .owl-pagination
            display: none

    @media (min-width: (viewport + 80))
        .owl
            &-next
                right: -30px

            &-prev
                left: -30px

    &__item
        display: block

    &__title
        color: var(--primary)
        font-weight: medium
        font-size: 20px

    &__header
        overflow: hidden
        padding-bottom: (gap / 2)
        border-radius: var(--border-radius)

        .prolabel
            padding-top: 20px

    &__case
        display: flex
        flex-flow: column nowrap
        padding: 20px
        height: 100%
        border-radius: var(--border-radius)
        box-shadow: inset 0 0 0 1px var(--color-border)

        &:hover
            @media media-min-lg
                box-shadow: inset 0 0 0 1px var(--primary)

                .products__name
                    border-bottom-color: var(--primary)

    &__categories
        .product-categories-list
            li:not(:first-child)
                display: none

            a
                color: var(--primary)
                font-weight: medium
                font-size: 14px

    &__name
        padding: 5px 0 16px
        height: 60px
        border-bottom: solid 1px var(--color-border)
        color: var(--color-text)
        font-weight: medium
        font-size: 14px

        span
            display: -webkit-box
            overflow: hidden
            line-height: 20px
            -webkit-line-clamp: 2
            -webkit-box-orient: vertical

    &__main
        display: flex
        flex: 1
        flex-flow: column nowrap
        min-width: 0

    &__prices
        margin-top: auto
        padding: (gap / 2) 0 0

    &__footer
        .button
            display: flex
            justify-content: center
            align-items: center
            padding: 0
            width: 100%
            height: 42px
            background: linear-gradient(to bottom, var(--button), var(--button-hover))
            box-shadow: none
            font-weight: bold
            font-size: 14px
            transition: none

            &:hover
                @media media-min-lg
                    background: var(--button-hover)